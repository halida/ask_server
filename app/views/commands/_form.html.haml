= form_for @command do |f|
  - if @command.errors.any?
    #error_explanation
      %h2= "#{pluralize(@command.errors.count, "error")} prohibited this command from being saved:"
      %ul
        - @command.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :command
    = f.text_field :command
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :private
    = f.check_box :private
  .actions
    = f.submit 'Save'
